@model DataImporter.Web.Models.Account.RegisterConfirmationModel
@{
    Layout = "_404";
}


@if (Model.Status)
{
   ViewData["Title"] = "200"; 

<div class="wrapper not-found">
    <h1 class="animated fadeIn">Well Done!</h1>
    <div class="desc animated fadeIn"><span>Email @Model.Email has been verified </span><br>Please login to continue</div>
    <a href="/" class="btn btn-primary btn-back-home mt-4 animated fadeInUp">
        <span class="btn-label mr-2">
            <i class="flaticon-home"></i>
        </span>
        Back To Home
    </a>
</div>

}
else
{

 ViewData["Title"] = "404";

<div class="wrapper not-found">
    <h1 class="animated fadeIn">Failed!</h1>
    <div class="desc animated fadeIn"><span>Something went wrong </span><br>Please try again to continue.</div>
    <a href="/" class="btn btn-primary btn-back-home mt-4 animated fadeInUp">
        <span class="btn-label mr-2">
            <i class="flaticon-home"></i>
        </span>
        Back To Home
    </a>
</div>
}
