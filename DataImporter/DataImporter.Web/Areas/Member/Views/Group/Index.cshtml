@model GroupListModel

@{
    ViewData["Title"] = "Index";
}


<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">Groups</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="#">
                    <i class="flaticon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <a href="#">member</a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <a href="#">groups </a>
            </li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">All Available Groups</h4>
                        <button class="btn btn-primary btn-round ml-auto" data-toggle="modal" data-target="#addRowModal">
                            <i class="fa fa-plus"></i>
                            Create a new Group
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <partial name="_CreatePartial" />
                    <div class="table-responsive">
                        <table id="groups" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Group Name</th>
                                    <th style="width: 10%">Action</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Group Name</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>
                        <partial name="_DeletePopupPartial" />
                        <partial name="_EditPartial" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts
{
    <script>

        $.fn.Datatable = function () {
            $('#groups').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": "/member/Group/GetGroupData",
                "ajax": {
                    'type': 'POST',
                    'url': '/member/Group/GetGroupData',
                    'data': {},
                },
                "columnDefs": [
                    {
                        "orderable": false,
                        "targets": 1,
                        "render": function (data, type, row) {
                            return `<td>
                                                <div class="form-button-action">
                                                    <button id="editButton" data-toggle="tooltip" title="" class="btn btn-link btn-primary btn-lg" onclick="$.fn.EditModal('/member/group/edit/${data}')" data-original-title="Edit Task" value='${data}'>
                                                        <i class="fa fa-edit"></i>
                                                    </button>
                                                    <button type="submit" data-toggle="tooltip" title="" class="btn btn-link btn-danger show-delete-modal" data-original-title="Remove" data-id='${data}' value='${data}'>
                                                        <i class="fa fa-times"></i>
                                                    </button>
                                                </div></td>`;
                        }
                    }
                ],
                oLanguage: {
                    sProcessing: "<div class='card-body is-loading is-loading-lg'></div>"
                }
            });
            $('#groups').on('click', '.show-delete-modal', function (event) {
                var id = $(this).data("id");
                var modal = $("#modal-default");
                modal.find('.modal-body p').text('Are you sure you want to delete this record?')
                $("#deleteButton").val(id);
                modal.modal('show');
            });
        }

    </script>
}

<script>
    $(document).ready(function () {

        var def = $.Deferred();
        def.then($.fn.Datatable());

    });
</script>

<script>
    $.fn.DeleteModal = function (value = 0) {
        $.ajax({
            url: '/member/group/delete/' + value,
            type: "GET",
            beforeSend: function () {
                $('#deleteButton').addClass("is-loading");
            },
            success: function (response) {
                $('#deleteButton').removeClass("is-loading");
                $('#modal-default').modal('hide');
            },
            complete: function (response) {
                if (response.status == 200) {
                    swal("Done", "Group successfully deleted", {
                        icon: "success",
                        buttons: {
                            confirm: {
                                className: 'btn btn-success'
                            }
                        },
                    });

                    $('#groups').DataTable().ajax.reload();

                }
                else {
                    $('#deleteButton').removeClass("is-loading");

                    swal("Failed", response.responseText, {
                        icon: "error",
                        buttons: {
                            confirm: {
                                className: 'btn btn-danger'
                            }
                        },
                    });
                }
            },
            failure: function (jqXHR, textStatus, errorThrown) {
                alert("HTTP Status: " + jqXHR.status + "; Error Text: " + jqXHR.responseText); // Display error message
            }
        });
    }
</script>
