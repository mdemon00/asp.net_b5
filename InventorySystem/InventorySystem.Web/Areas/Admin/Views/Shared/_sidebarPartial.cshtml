@{
    var controller = @ViewContext.RouteData.Values["controller"].ToString();

    var product = (controller == "Product") ? "active" : "";
    var stock = (controller == "Stock") ? "active" : "";
}

<!-- Sidebar -->
<div class="sidebar sidebar-style-2">
    <div class="sidebar-wrapper scrollbar scrollbar-inner">
        <div class="sidebar-content">
            <ul class="nav nav-primary">
                <li class="nav-item @product">
                    <a href="/admin/product" class="collapsed" aria-expanded="false">
                        <i class="fas fa-shopping-basket"></i>
                        <p>Products</p>
                        <span class="caret"></span>
                    </a>
                </li>
                <li class="nav-item @stock">
                    <a href="/admin/stock" class="collapsed" aria-expanded="false">
                        <i class="fas fa-boxes"></i>
                        <p>Stocks</p>
                        <span class="caret"></span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- End Sidebar -->