@{
    var controller = @ViewContext.RouteData.Values["controller"].ToString();

    var student = (controller == "Student") ? "active" : "";
    var attendance = (controller == "Attendance") ? "active" : "";
}

<!-- Sidebar -->
<div class="sidebar sidebar-style-2">
    <div class="sidebar-wrapper scrollbar scrollbar-inner">
        <div class="sidebar-content">
            <ul class="nav nav-primary">
                <li class="nav-item @student">
                    <a href="/admin/student" class="collapsed" aria-expanded="false">
                        <i class="fas fa-users"></i>
                        <p>Students</p>
                        <span class="caret"></span>
                    </a>
                </li>   
                <li class="nav-item @attendance">
                    <a href="/admin/attendance" class="collapsed" aria-expanded="false">
                        <i class="fas fa-clipboard"></i>
                        <p>Attendences</p>
                        <span class="caret"></span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- End Sidebar -->